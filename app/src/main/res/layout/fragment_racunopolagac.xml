<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RacunopolagacFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:id="@+id/textView_lokacija"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="testfg"
                android:textSize="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
            app:layout_constraintVertical_chainStyle="packed">

            <TextView
                android:id="@+id/textview_unosRacunopolagaca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/unesite_racunopolagaca"
                android:textAlignment="center"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/editText_unosRacunopolagaca"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/textview_unosRacunopolagaca"
                android:layout_marginTop="18dp"
                android:hint="@string/racunopolagac"
                android:textSize="20sp" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
